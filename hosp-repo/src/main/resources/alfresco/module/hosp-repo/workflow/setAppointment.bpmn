<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:activiti="http://activiti.org/bpmn" xmlns:bpmndi="http://www.omg.org/spec/BPMN/20100524/DI" xmlns:omgdc="http://www.omg.org/spec/DD/20100524/DC" xmlns:omgdi="http://www.omg.org/spec/DD/20100524/DI" typeLanguage="http://www.w3.org/2001/XMLSchema" expressionLanguage="http://www.w3.org/1999/XPath" targetNamespace="http://www.activiti.org/test">
  <process id="setAppointment" name="Set Appointment" isExecutable="true">
    <startEvent id="start" name="Start" activiti:formKey="mad:start"></startEvent>
    
    <sequenceFlow id="flow1" sourceRef="start" targetRef="fillblank"></sequenceFlow>
    
    <userTask id="fillblank" name="Fill Blank Task" activiti:assignee="${initiator.properties.userName}" activiti:formKey="mad:fillblank">
      <extensionElements>
        <activiti:taskListener event="create" class="org.alfresco.repo.workflow.activiti.tasklistener.ScriptTaskListener">
          <activiti:field name="script">
            <activiti:string><![CDATA[task.setVariable('mad_patient',initiator);
							execution.setVariable('patient', initiator);]]>
			</activiti:string>
          </activiti:field>
        </activiti:taskListener>
        <activiti:taskListener event="complete" class="org.alfresco.repo.workflow.activiti.tasklistener.ScriptTaskListener">
          <activiti:field name="script">
            <activiti:string>var doctor = task.getVariable('mad_doctor');
							var complaints = task.getVariable('mad_complaints');
							var datetime = task.getVariable('mad_datetime'); 
							execution.setVariable('doctor', doctor);
							execution.setVariable('complaints',complaints);
							execution.setVariable('datetime',datetime);
							logger.log("Current complaints: " + complaints);
							
						<!--var mail = actions.create("mail");
                            mail.parameters.to = doctor.properties.email;
                            mail.parameters.subject = "Appointment with " + patient.properties.userName;
                            mail.parameters.from = patient.properties.email;
                            mail.parameters.text = "Your next appintment set to "+ datetime;
                            mail.execute(bpm_package); -->
							</activiti:string>
          </activiti:field>
        </activiti:taskListener>
      </extensionElements>
    </userTask>
    <sequenceFlow id="flow6" sourceRef="fillblank" targetRef="checktask"></sequenceFlow>
    <userTask id="checktask" name="Fill out the results" activiti:assignee="${doctor.properties.userName}" activiti:formKey="mad:checktask">
      <extensionElements>
        <activiti:taskListener event="create" class="org.alfresco.repo.workflow.activiti.tasklistener.ScriptTaskListener">
          <activiti:field name="script">
            <activiti:string><![CDATA[task.setVariable('mad_patient',execution.getVariable('patient'));
						task.setVariable('mad_doctor',execution.getVariable('doctor'));
						task.setVariable('mad_complaints',execution.getVariable('complaints'));]]></activiti:string>
          </activiti:field>
        </activiti:taskListener>
        <activiti:taskListener event="complete" class="org.alfresco.repo.workflow.activiti.tasklistener.ScriptTaskListener">
          <activiti:field name="script">
            <activiti:string><![CDATA[execution.setVariable('mad_appOutcome', task.getVariable('mad_appOutcome'));
							execution.setVariable('diagnosis', task.getVariable('mad_diagnosis'));
							execution.setVariable('prescriptions',task.getVariable('mad_prescriptions'));]]></activiti:string>
          </activiti:field>
        </activiti:taskListener>
      </extensionElements>
    </userTask>
    <sequenceFlow id="flow3" sourceRef="checktask" targetRef="exclusivegateway1"></sequenceFlow>
    <exclusiveGateway id="exclusivegateway1" name="Exclusive Gateway"></exclusiveGateway>
    <sequenceFlow id="flow4" sourceRef="exclusivegateway1" targetRef="correction">
      <conditionExpression xsi:type="tFormalExpression"><![CDATA[${mad_appOutcome == 'reject'}]]></conditionExpression>
    </sequenceFlow>
    <userTask id="correction" name="Request correction" activiti:assignee="${patient.properties.userName}" activiti:formKey="mad:correction">
      <extensionElements>
        <activiti:taskListener event="create" class="org.alfresco.repo.workflow.activiti.tasklistener.ScriptTaskListener">
          <activiti:field name="script">
            <activiti:string><![CDATA[task.setVariable('mad_patient',execution.getVariable('patient'));
							task.setVariable('mad_doctor',execution.getVariable('doctor'));
							task.setVariable('mad_complaints',execution.getVariable('complaints'));]]></activiti:string>
          </activiti:field>
        </activiti:taskListener>
        <activiti:taskListener event="complete" class="org.alfresco.repo.workflow.activiti.tasklistener.ScriptTaskListener">
          <activiti:field name="script">
            <activiti:string><![CDATA[var complaints = task.getVariable('mad_complaints');
                            execution.setVariable('mad_corrOutcome', task.getVariable('mad_corrOutcome'));
							execution.setVariable('appointment', task.getVariable('mad_appointment'));
							execution.setVariable('datetime',task.getVariable('mad_datetime1'));
							execution.setVariable('complaints',complaints);]]></activiti:string>
          </activiti:field>
        </activiti:taskListener>
      </extensionElements>
    </userTask>
    <sequenceFlow id="flow5" sourceRef="exclusivegateway2" targetRef="checktask">
      <conditionExpression xsi:type="tFormalExpression"><![CDATA[${mad_corrOutcome == 'approve'}]]></conditionExpression>
    </sequenceFlow>
    <userTask id="acknowledgement" name="Results acknowledgement" activiti:assignee="${patient.properties.userName}" activiti:formKey="mad:acknowledgement">
      <extensionElements>
        <activiti:taskListener event="create" class="org.alfresco.repo.workflow.activiti.tasklistener.ScriptTaskListener">
          <activiti:field name="script">
            <activiti:string><![CDATA[task.setVariable('mad_diagnosis',execution.getVariable('diagnosis'));
							task.setVariable('mad_prescriptions',execution.getVariable('prescriptions'));
							task.setVariable('mad_complaints',execution.getVariable('complaints'));]]></activiti:string>
          </activiti:field>
        </activiti:taskListener>
      </extensionElements>
    </userTask>
    <sequenceFlow id="flow7" sourceRef="exclusivegateway1" targetRef="acknowledgement">
      <conditionExpression xsi:type="tFormalExpression"><![CDATA[${mad_appOutcome == 'approve'}]]></conditionExpression>
    </sequenceFlow>
    <sequenceFlow id="flow8" sourceRef="acknowledgement" targetRef="end"></sequenceFlow>
    <sequenceFlow id="flow9" sourceRef="exclusivegateway2" targetRef="end">
      <conditionExpression xsi:type="tFormalExpression"><![CDATA[${mad_corrOutcome == 'reject'}]]></conditionExpression>
    </sequenceFlow>
    <endEvent id="end" name="End"></endEvent>
    <exclusiveGateway id="exclusivegateway2" name="Exclusive Gateway"></exclusiveGateway>
    <sequenceFlow id="flow10" sourceRef="correction" targetRef="exclusivegateway2"></sequenceFlow>
  </process>
