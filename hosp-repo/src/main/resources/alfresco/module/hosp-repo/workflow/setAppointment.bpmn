      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge bpmnElement="flow8" id="BPMNEdge_flow8">
        <omgdi:waypoint x="595.0" y="117.0"></omgdi:waypoint>
        <omgdi:waypoint x="640.0" y="117.0"></omgdi:waypoint>
